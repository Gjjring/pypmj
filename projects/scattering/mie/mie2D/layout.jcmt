Layout {
  UnitOfLength = 1e-6
  
  # Computational domain
  Parallelogram {
    DomainId = 1
    SidelengthA = 4
    SidelengthB = 4
    SideLengthConstraint = 0.2

    # set transparent boundary conditions
    BoundarySegment {
      BoundaryClass = Transparent
    }
  }

  # Scatterer (rod)
  Circle {
    DomainId = 2
    Radius = %(radius)e
    SideLengthConstraint = 0.1
    RefineAll = 4
  } 
}


 
