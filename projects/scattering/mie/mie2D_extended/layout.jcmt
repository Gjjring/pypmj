Layout {
  UnitOfLength = 1e-6
  
  # Computational domain
  Parallelogram {
    DomainId = 1
    SidelengthA = 4
    SidelengthB = 4
    SideLengthConstraint = %(slc_domain)4f

    # set transparent boundary conditions
    BoundarySegment {
      BoundaryClass = Transparent
    }
  }

  # Scatterer (rod)
  Circle {
    DomainId = 2
    Radius = %(radius)e
    SideLengthConstraint = %(slc_circle)4f
    RefineAll = %(refine_all_circle)i
  } 
}


 
